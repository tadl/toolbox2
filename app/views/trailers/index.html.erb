<div class="mt-3">
  <%= will_paginate @trailers, list_classes: %w(pagination justify-content-center) %>
</div>
<% @trailers.each do |t| %>
  <div id="card_<%= t.record_id %>" class="card mt-3">
    <div class="card-body">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-2">
            <img src="https://catalog.tadl.org/opac/extras/ac/jacket/medium/r/<%= t.record_id.to_s %>">
          </div>
          <div class="col-lg-10">
            <h5 class="card-title"><%= t.title %></h5>
            <% if t.artist || t.publisher || t.release_date %>
              <p>
                <% if t.artist %>
                  <b><%= t.artist %> | </b>
                <% end %>
                <% if t.publisher %>
                  <b><%= t.publisher %> | </b>
                <% end %>
                <% if t.release_date %>
                  <b><%= t.release_date %> | </b>
                <% end %>
              </p>
            <% end %>
            <% if t.abstract %>
              <p class="card-text"><b>Abstract:</b> <%= t.abstract %></p>
            <% end %>
            <% if t.track_list %>
              <p class="card-text"><b>Track List:</b> <%= t.track_list %></p>
            <% end %>
            <div class="row">
              <div id="alerts_<%= t.record_id %>" class="col-sm-8">
              </div>
            </div>
            <div id="form_<%= t.record_id %>">
              <div class="row">
                <div class="input-group mb-3 col-sm-8">
                  <input id="trailer_url_<%= t.record_id %>" type="text" class="form-control" placeholder="Enter URL for Video on Youtube" aria-label="Youtube URL" aria-describedby="basic-addon2">
                  <div class="input-group-append">
                    <button class="btn btn-success" type="button" onclick="save_trailer('<%= t.record_id %>')">Save Trailer</button>
                  </div>
                </div>
              </div>
              <a class="btn btn-primary mb-3" href="https://www.youtube.com/results?search_query=<%= CGI.escape(t.title + ' trailer') %>" target="_new" role="button">Search Youtube</a>
              <a class="btn btn-danger mb-3" href="https://www.youtube.com/results?search_query=<%= CGI.escape(t.title + ' trailer') %>" target="_new" role="button">Remove Trailer</a>
              <a class="btn btn-secondary mb-3" href="https://www.youtube.com/results?search_query=<%= CGI.escape(t.title + ' trailer') %>" target="_new" role="button">Mark Not Found</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="mt-3 mb-3">
  <%= will_paginate @trailers, list_classes: %w(pagination justify-content-center) %>
</div>