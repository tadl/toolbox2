<h2 class="mt-3 mb-3">Events</h2>

<% @events['events'].each do |e| %>
    <div class="row mt-2">
        <div class="col-12">
            <h4><%= e['title'] %></h4>
            <p><%= DateTime.parse(e['start_date']).strftime("%B %d, %Y %I:%M %p") %></p>
            <p><%= e['description'] %></p>
            <p><a href="<%= e['url'] %>" target="_blank"><%= e['url'] %></a></p>
        </div>
    </div>
<% end %>