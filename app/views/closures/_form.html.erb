<h1 class="mt-1">New Colsure</h1>
<h3>Details</h3>
<div class="row mt-3">
    <div class ="col-sm-4">
        <label for="date" class="form-label">Date:</label>
        <input type="date" class="form-control" id="date" value="<%= @closure.closure_date %>">
    </div>
    <div class ="col-sm-4">
        <label for="hours" class="form-label">Hours:</label>
        <input type="text" class="form-control" id="hours" value="<%= @closure.hours %>">
    </div>
    <div class ="col-sm-4">
        <label for="reason" class="form-label">Reason:</label>
        <input type="text" class="form-control" id="reason"  value="<%= @closure.reasons %>">
    </div>
</div>
<h3 class="mt-3">Effected Locations</h3>
<div class="row mt-3">
    <% locations.each do |l| %>
        <div class="col-sm-4 mb-2">
            <label><input type="checkbox" name="locations[]" value="<%= l.id %>" <%= check_location(l.id, @closure) %> /> <%= l.fullname %></label>
        </div>
    <% end %>
</div>
<div class="row" id="errors">
</div>
<div class="row">
    <button type="button" onclick="save_closure(<%= @closure.id %>)" class="btn btn-success m-2">Save</button>
    <a href="/closures"><button type="button" class="btn btn-danger m-2">Cancel</button></a>
</div>