<p id="notice"><%= notice %></p>

<h1>Numbers</h1>
<div class="mb-3">
    <a href="/numbers/new">
        <i>Create a new number</i>
    </a>
</div>

<div class="row mb-3">
    <div class="col-sm-12">
        <h4>Get Help Numbers</h4>
        <% @numbers.where(number_type: 'help').order('name ASC').each do |n| %>
            <%= n.name %> - <%= n.phone %> <a href="/numbers/edit?id=<%= n.id %>">(edit)</a>
            <br>
        <% end %>
    </div>
</div>

