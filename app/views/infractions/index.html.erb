<p id="notice"><%= notice %></p>

<h1>Infractions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>First offence</th>
      <th>Second offence</th>
      <th>Subsiquent offence</th>
      <th>Track</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infractions.each do |infraction| %>
      <tr>
        <td><%= infraction.description %></td>
        <td><%= infraction.first_offence %></td>
        <td><%= infraction.second_offence %></td>
        <td><%= infraction.subsiquent_offence %></td>
        <td><%= infraction.track %></td>
        <td><%= link_to 'Show', infraction %></td>
        <td><%= link_to 'Edit', edit_infraction_path(infraction) %></td>
        <td><%= link_to 'Destroy', infraction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

